generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                 String    @id @default(cuid())
  email              String    @unique
  name               String?
  image              String?
  youtubeChannelId   String?   // DEPRECATED: Keep for backward compatibility
  activeChannelId    String?   // Currently selected channel for viewing
  accessToken        String?
  refreshToken       String?
  tokenExpiry        DateTime?
  ctrPercent         Float     @default(2.0)
  conversionPercent  Float     @default(3.0)
  avgOrderValue      Float     @default(45.0)
  trialEndsAt        DateTime?
  subscriptionStatus String    @default("trial")
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  emailVerified      DateTime?

  // Tier system
  tier               UserTier  @default(TRIAL)
  videoScanLimit     Int       @default(15)    // Free tier: 15 videos max
  lastScanDate       DateTime?                 // For one-time scan restriction
  monitoringEnabled  Boolean   @default(false) // Link Guard feature
  alertsEnabled      Boolean   @default(false) // Email alerts for status changes

  // Affiliate settings
  affiliateTag          String?                   // Legacy: User's default Amazon affiliate tag
  hasCompletedFirstScan Boolean   @default(false) // Track if user has done their first scan

  // Per-region affiliate tags (auto-detected from links, editable in settings)
  affiliateTagUS        String?   // amazon.com
  affiliateTagUK        String?   // amazon.co.uk
  affiliateTagCA        String?   // amazon.ca
  affiliateTagDE        String?   // amazon.de

  // Multi-network affiliate partner IDs
  bhphoto_bi            String?   // B&H Photo BI parameter
  bhphoto_kbid          String?   // B&H Photo KBID parameter
  impact_sid            String?   // Impact Account SID
  cj_pid                String?   // CJ Affiliate Publisher ID
  rakuten_id            String?   // Rakuten Site ID
  shareasale_id         String?   // ShareASale Affiliate ID
  awin_id               String?   // Awin Publisher ID

  // Stripe subscription fields
  stripeCustomerId      String?   @unique
  stripeSubscriptionId  String?   @unique
  subscriptionCancelAt  DateTime?           // When subscription will end (if canceling)

  accounts           Account[]
  sessions           Session[]
  videos             Video[]
  channels           Channel[]  // User's connected YouTube channels
}

enum UserTier {
  TRIAL       // Brand new users who haven't scanned yet
  AUDITOR     // Completed free scan OR cancelled paid plan (free tier)
  SPECIALIST  // Paid tier - $19/mo single channel
  OPERATOR    // Paid tier - $39/mo up to 3 channels
}

// ============================================
// CHANNEL (Multi-channel support)
// ============================================
// Stores connected YouTube channels for each user
// Operator tier can have up to 3 channels
model Channel {
  id                String    @id @default(cuid())
  youtubeChannelId  String    // The actual YouTube channel ID
  title             String    // Channel name
  thumbnailUrl      String?   // Channel thumbnail
  subscriberCount   Int       @default(0)
  videoCount        Int       @default(0)

  userId            String
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  videos            Video[]

  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@unique([userId, youtubeChannelId])
  @@index([userId])
}

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String? @db.Text
  access_token             String? @db.Text
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String? @db.Text
  session_state            String?
  refresh_token_expires_in Int?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Video {
  id             String          @id @default(cuid())
  youtubeVideoId String          @unique
  title          String
  description    String?
  thumbnailUrl   String?
  viewCount      Int             @default(0)
  publishedAt    DateTime
  userId         String
  channelId      String?         // Which channel this video belongs to (nullable for backward compat)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  // Affiliate disclosure audit fields
  hasAffiliateLinks    Boolean          @default(false)
  affiliateLinkCount   Int              @default(0)
  disclosureStatus     DisclosureStatus @default(UNKNOWN)
  disclosureText       String?          // The actual disclosure text found
  disclosurePosition   Int?             // Character position in description
  disclosureDismissed  Boolean          @default(false) // User dismissed this disclosure issue

  affiliateLinks AffiliateLink[]
  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  channel        Channel?        @relation(fields: [channelId], references: [id], onDelete: SetNull)

  @@index([channelId])
}

enum DisclosureStatus {
  COMPLIANT  // Disclosure in first 200 characters
  WEAK       // Disclosure exists but buried
  MISSING    // No disclosure found
  UNKNOWN    // Not yet scanned
}

model AffiliateLink {
  id            String       @id @default(cuid())
  originalUrl   String
  merchant      String       @default("unknown")
  status        LinkStatus   @default(UNKNOWN)
  previousStatus LinkStatus?  // For Link Guard: track status changes
  lastCheckedAt DateTime?
  videoId       String
  amazonRegion  String?      // Detected Amazon region: US, UK, CA, DE, etc.
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  // Fix tracking fields
  suggestedLink    String?      // The corrected affiliate link URL
  suggestedTitle   String?      // Title of the suggested replacement product
  suggestedAsin    String?      // ASIN of the suggested replacement product
  suggestedPrice   String?      // Price of the suggested product
  confidenceScore  Int?         // AI confidence score (0-100) for match quality
  searchQuery      String?      // The search query used to find this replacement
  isFixed          Boolean      @default(false) // Has user marked this as fixed?
  dateFixed        DateTime?    // When was it fixed?
  isDismissed      Boolean      @default(false) // Has user dismissed this unfixable link?
  dateDismissed    DateTime?    // When was it dismissed?
  dismissReason    String?      // Optional reason for dismissing
  video         Video        @relation(fields: [videoId], references: [id], onDelete: Cascade)
  scanResults   ScanResult[]
  statusHistory LinkStatusHistory[]
}

model ScanResult {
  id                 String        @id @default(cuid())
  affiliateLinkId    String
  scanTimestamp      DateTime      @default(now())
  httpStatus         Int?
  availabilityStatus String?
  notes              String?
  affiliateLink      AffiliateLink @relation(fields: [affiliateLinkId], references: [id], onDelete: Cascade)
}

enum LinkStatus {
  OK
  OOS
  OOS_THIRD_PARTY   // Available from third-party sellers only
  NOT_FOUND
  SEARCH_REDIRECT   // Product redirected to Amazon search results (soft 404)
  MISSING_TAG       // Affiliate tag stripped from URL
  REDIRECT
  UNKNOWN
}

model PublicAudit {
  id                    String   @id @default(cuid())
  channelId             String
  channelName           String
  channelThumbnail      String?
  totalVideos           Int
  totalLinks            Int
  brokenLinks           Int
  outOfStockLinks       Int
  redirectLinks         Int
  healthyLinks          Int
  estimatedMonthlyLoss  Float
  topIssues             Json     // Array of top issues
  createdAt             DateTime @default(now())
  ipHash                String?  // Hashed IP for rate limiting
  convertedToSignup     Boolean  @default(false)
  sharedCount           Int      @default(0)

  @@index([channelId])
  @@index([createdAt])
}

// ============================================
// ASIN-BASED LINK CACHE
// ============================================
// Caches ScrapingBee results by ASIN to avoid duplicate API calls
// Same product across different videos will use cached result
model LinkCache {
  id           String     @id @default(cuid())
  asin         String     @unique  // 10-character Amazon product ID (e.g., B0CJ4K9XYZ)
  status       LinkStatus           // Cached link status
  finalUrl     String?              // Final resolved URL after redirects
  reason       String?              // Detection reason (e.g., "Search Fallback", "Out of Stock")
  httpStatus   Int?                 // HTTP status code from the check
  lastChecked  DateTime   @default(now())
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  // Stats for monitoring cache effectiveness
  hitCount     Int        @default(0)  // How many times this cache was used

  @@index([asin])
  @@index([lastChecked])
}

// ============================================
// LINK STATUS HISTORY (Link Guard Feature)
// ============================================
// Tracks status changes over time for monitoring
// Used by Link Guard to detect when links break
model LinkStatusHistory {
  id              String        @id @default(cuid())
  affiliateLinkId String
  status          LinkStatus
  httpCode        Int?
  checkedAt       DateTime      @default(now())
  affiliateLink   AffiliateLink @relation(fields: [affiliateLinkId], references: [id], onDelete: Cascade)

  @@index([affiliateLinkId])
  @@index([checkedAt])
}

// ============================================
// WAITLIST (Portfolio Manager Tier)
// ============================================
// Stores emails for users interested in Portfolio Manager tier
model Waitlist {
  id        String   @id @default(cuid())
  email     String   @unique
  tier      String   // 'portfolio' for Portfolio Manager tier
  source    String?  // Where they signed up from (e.g., 'pricing', 'dashboard')
  feedback  String?  // Optional: "What's the #1 thing you'd need?"
  joinedAt  DateTime @default(now())

  @@index([tier])
  @@index([joinedAt])
}
